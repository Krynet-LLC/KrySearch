{
  "site": {
    "name": "KrySearch",
    "description": "Privacy-first search router for open and privacy-focused engines",
    "url": "https://krysearch.io",
    "logo": "assets/logo.png",
    "theme": "dark",
    "language": "en-US"
  },

  "search": {
    "defaultEngine": "startpage",
    "routing": "engine-direct",
    "noInputParsing": true
  },

  "engines": {
    "open_source": {
      "searxng": {
        "name": "SearXNG",
        "description": "Open-source metasearch engine",
        "base": "https://searx.space/",
        "appendInput": true,
        "mode": "direct"
      },
      "yacy": {
        "name": "YaCy",
        "description": "Decentralized P2P search",
        "base": "http://search.yacy.net/",
        "appendInput": true,
        "mode": "direct"
      }
    },

    "closed_source": {
      "startpage": {
        "name": "Startpage",
        "description": "Privacy Google proxy",
        "base": "https://www.startpage.com/",
        "appendInput": true,
        "mode": "direct"
      },
      "duckduckgo": {
        "name": "DuckDuckGo",
        "description": "Privacy-focused search",
        "base": "https://duckduckgo.com/",
        "appendInput": true,
        "mode": "direct"
      },
      "brave": {
        "name": "Brave Search",
        "description": "Independent privacy search",
        "base": "https://search.brave.com/",
        "appendInput": true,
        "mode": "direct"
      }
    }
  },

  "appearance": {
    "font": "Inter, sans-serif",
    "colors": {
      "primary": "#4b8df8",
      "secondary": "#1f1f1f",
      "accent": "#f8c848"
    },
    "customCSS": "UI/styles.css",
    "enableDarkModeSwitch": true
  }
}
